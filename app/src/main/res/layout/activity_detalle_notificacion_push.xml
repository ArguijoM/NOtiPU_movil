<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetalleNotificacionPush"
    android:orientation="vertical">
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:background="@color/colorFondo"
        android:layout_height="@dimen/tamano_layout_encabezado">
        <TextView
            android:id="@+id/tituloPush"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/tamano_letra_encabezado"
            android:text="Nombre"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tamano_letra"/>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:background="@color/colorPrimary"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/mensajePush"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorFondo"
            android:textSize="@dimen/tamano_letra"
            android:text="Mensaje"/>

    </LinearLayout>

</LinearLayout>